{% extends 'layout.twig' %}

{% block content %}
  <div class="container">
    <div class="row">
      
      <div class="paragraphs paragraphs--wide">
        {% block paragraphs %}
          {% include 'paragraphs/text.twig' with {
            content: '<h2>Empower young people in one of the most rigorous, immersive, globally engaged experiences in the liberal arts and sciences.</h2>'
          } %}
          {% include 'paragraphs/video.twig' %}

          {% include 'paragraphs/text.twig' with {
            content: '<hr>
            <p>Because understanding the world and finding value in our differences has never been more urgent than it is today.</p>
            <hr>'
          }%}

          {% include 'paragraphs/tri-story.twig' with {
            title: 'What Really Matters Here',
            subheading: 'Our Priorities, Your Opportunity'
          }%}

          <hr>

          {% include 'paragraphs/mega-cta.twig' %}
          
          <hr>
          {% include 'paragraphs/quote.twig' with {
            quote_text: 'Middlebury speaks the language of the future.<br>Join the conversation.'
          }%}
        {% endblock %}
      </div>
      
    </div>
  </div>
{% endblock %}