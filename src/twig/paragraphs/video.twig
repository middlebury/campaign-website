{% set id = random(1234) %}
<figure class="paragraph--video video js-video" data-video='<iframe src="https://player.vimeo.com/video/221201240?autoplay=1" width="400" height="225" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen allow="autoplay"></iframe>'>
    <div class="video__content js-video-content">
      <a
        href="https://player.vimeo.com/video/221201240"
        class="js-video-link video__link"
        role="button"
        aria-label="Play video"
        aria-describedby="midd-video-label-{{id}}" 
      >
        {% include 'partials/img.twig' with { name: 'video' } %}
        <div class="video__front {{video_title ? "video__front--gradient" : ""}}">
          {% if video_title %}
            <h3 class="video__title" id="midd-video-label-{{id}}">{{video_title}}</h3>
          {% endif %}
          <span class="button button--primary video__button">
            {% if duration %}<span class="video__button--text-before">{{duration}}</span>{% endif %}<span class="{{duration ? 'pl-3' : ''}} video__button--text-after">Play
                <span class="ml-2">
                    {% include 'partials/icon.twig' with {
                      name: 'play',
                      class: 'video__button--play'
                    }%}
                </span>
              </span>
            </span>
          </span>
        </div>
      </a>
    </div>
  <figcaption>
    {% if not video_title %}
      <h3 class="visually-hidden" id="midd-video-label-{{id}}">Why Middlebury? Why Now?</h3>
    {% endif %}
    {% include 'partials/transcript.twig' with { id: id } %}
  </figcaption>
</figure>